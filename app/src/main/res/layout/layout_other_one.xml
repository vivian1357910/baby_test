<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/title_name"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:text="小明" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" >

                    <Button
                        android:id="@+id/btn_chat"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:textSize="12dp"
                        android:text="@string/title_chat" />

                    <Button
                        android:id="@+id/btn_house"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:layout_margineft="156dp"
                        android:text="@string/title_house" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_title_need"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:text="@string/title_want"
                    />
                <TextView
                    android:id="@+id/tv_need"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:text="保母"
                    android:layout_marginStart="52dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_title_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:text="@string/title_time"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:text="2020/11/28 (六) 全天"
                    android:layout_marginStart="36dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_title_place"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:text="@string/title_place" />
                <TextView
                    android:id="@+id/tv_place"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:text="自宅"
                    android:layout_marginStart="36dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_title_money"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:text="@string/title_money" />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:text="1000/小時"
                    android:layout_marginStart="36dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_title_else"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:text="@string/title_else" />
                <TextView
                    android:id="@+id/tv_else"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="36dp"
                    android:singleLine="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:text="@string/app_slogan" />

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_image_need"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="8dp" />

    </LinearLayout>



    <!--  ViewPager，页面填充页  -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="530dp"
        android:layout_marginBottom="?actionBarSize"
        android:overScrollMode="never"
        />

</FrameLayout>